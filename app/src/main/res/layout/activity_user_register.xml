<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserRegisterActivity">

    <ImageView
        android:id="@+id/img_seller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/library"

        />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_below="@+id/img_seller"
        android:layout_marginTop="-220dp">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/product_image_card_view_details"
            style="@style/MyCardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            app:cardElevation="15dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/input_design2"
                android:padding="10dp">


                <TextView
                    android:id="@+id/title_seller"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Create Account"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/seller_f_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_seller"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/input_design3"
                    android:drawableStart="@drawable/ic_baseline_account_circle_24"
                    android:hint="First Name"
                    android:padding="10dp" />

                <EditText
                    android:id="@+id/seller_l_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/seller_f_name"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/input_design3"
                    android:drawableStart="@drawable/ic_baseline_account_circle_24"
                    android:hint="Last Name"
                    android:padding="10dp" />


                <EditText
                    android:id="@+id/seller_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/seller_l_name"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/input_design3"
                    android:drawableStart="@drawable/ic_baseline_phone_iphone_24"
                    android:hint="PhoneNumber"
                    android:inputType="number"
                    android:padding="10dp" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/seller_login_pw"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    app:boxBackgroundMode="outline"
                    app:passwordToggleEnabled="true"
                    android:layout_below="@+id/seller_phone">


                    <EditText
                        android:id="@+id/seller_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/seller_phone"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/input_design3"
                        android:drawableStart="@drawable/ic_baseline_email_icon1"
                        android:hint="Email Address"
                        android:inputType="textEmailAddress"
                        android:padding="10dp" />
                </com.google.android.material.textfield.TextInputLayout>
<!--                <EditText-->
<!--                    android:id="@+id/seller_email"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_below="@+id/seller_phone"-->
