<!--                    android:ems="15"/>-->

<!--            </com.google.android.material.textfield.TextInputLayout>-->

                <Button
                    android:id="@+id/seller_register_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/seller_password"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/buttons"
                    android:padding="10dp"
                    android:text="Register"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />


                <!--            <TextView-->
                <!--                android:id="@+id/login_link"-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_below="@+id/seller_register_btn"-->
                <!--                android:layout_centerHorizontal="true"-->
                <!--                android:layout_marginLeft="15dp"-->
                <!--                android:layout_marginRight="25dp"-->
                <!--                android:layout_marginBottom="15dp"-->
                <!--                android:text="Or"-->
                <!--                android:textColor="@color/raveBlack"-->
                <!--                android:textSize="20dp" />-->

                <TextView
                    android:id="@+id/login_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/seller_register_btn"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="15dp"
                    android:text="Already registered? Sign in"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/signInWithGoogle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/login_link"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/common_google_signin_btn_text_dark_normal"
                    android:text="Sign in with Google"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>


    </androidx.core.widget.NestedScrollView>
</RelativeLayout>