<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Categories.Productcategories">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/r5">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/top_app_bar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_below="@+id/r5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/r5"
            android:layout_height="match_parent"
            android:isScrollContainer="true" >

        <RelativeLayout
        android:id="@+id/row_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

            android:isScrollContainer="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:id="@+id/calculator_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/product_image_calculator"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"
                android:gravity="left"
                android:scaleType="fitCenter"
                android:src="@drawable/calculator" />

            <TextView
                android:id="@+id/category_txt_calculator"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_below="@+id/product_image_calculator"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Calculators"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pencil_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toEndOf="@+id/calculator_category">

            <ImageView
                android:id="@+id/product_image_pencil"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/pencil" />

            <TextView
                android:id="@+id/category_txt_pencil"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/product_image_pencil"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="Pencils"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toEndOf="@+id/pencil_category">


            <ImageView
                android:id="@+id/product_image_notebooks"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/notebooks" />

            <TextView
                android:id="@+id/category_txt_notebooks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_image_notebooks"
                android:layout_centerHorizontal="true"
                android:gravity="left"
                android:text="Notebooks"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="15dp" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/category_scissors"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/three"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/product_image_scissors"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/scissors_color" />
            <TextView
                android:id="@+id/category_txt_scissors"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/product_image_scissors"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Scissors"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="15dp" />

        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/row_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/row_one"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:id="@+id/category_glue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/product_image_glue"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"
                android:gravity="left"
                android:scaleType="fitCenter"
                android:src="@drawable/books" />

            <TextView
                android:id="@+id/category_txt_glue"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/product_image_glue"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="TextBooks"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/category_clips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toEndOf="@+id/category_glue">

            <ImageView
                android:id="@+id/product_image_clips"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/paper_clip_icon" />

            <TextView
                android:id="@+id/category_txt_clips"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/product_image_clips"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="Clips"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/category_pins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toEndOf="@+id/category_clips">


            <ImageView
                android:id="@+id/product_image_pins"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/pushpin" />

            <TextView
                android:id="@+id/category_txt_pins"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/product_image_pins"
                android:layout_centerHorizontal="true"
                android:gravity="left"
                android:text="PushPin"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="15dp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/category_stapler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toEndOf="@+id/category_pins">

            <ImageView
                android:id="@+id/product_image_stapler"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"
                android:gravity="left"
                android:scaleType="fitCenter"
                android:src="@drawable/stapler" />

            <TextView
                android:id="@+id/category_txt_stapler"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/product_image_stapler"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Staplers"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="15dp" />
        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/row_three"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/row_two"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">



        <RelativeLayout
            android:id="@+id/rulers_category"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/product_image_rulers"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ruler" />

            <TextView
                android:id="@+id/category_txt_rulers"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/product_image_rulers"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Rulers"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="15dp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/category_punch"
            android:layout_margin="5dp"
            android:layout_toEndOf="@+id/rulers_category"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/product_image_punch"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"
                android:gravity="left"
                android:scaleType="fitCenter"
                android:src="@drawable/punching_machine" />
            <TextView
                android:id="@+id/category_txt_punch"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/product_image_punch"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Punch"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="15dp" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/category_tape"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/category_punch"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/product_image_tape"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/tape" />
            <TextView
                android:id="@+id/category_txt_tape"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/product_image_tape"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Tape"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="15dp" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/category_cutter"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/category_tape"
            android:layout_margin="5dp"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/product_image_cutter"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"
                android:scaleType="fitCenter"
                android:src="@drawable/danger_cutter" />
            <TextView
                android:id="@+id/category_txt_cutter"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/product_image_cutter"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Cutter"
                android:textAlignment="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="15dp" />

        </RelativeLayout>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/row_four"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/row_three"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">




    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_marginTop="5dp"
        android:id="@+id/cardviewad4"
        android:layout_below="@+id/row_four"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/ad1_img4"
            android:layout_width="match_parent"
            android:layout_below="@+id/picture_frame"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/z"
            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:id="@+id/txtcalculators"
        android:textAppearance="?attr/textAppearanceBody2"
        android:text="OTHER PRODUCTS"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="0dp"
        android:layout_below="@+id/cardviewad4"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:gravity="left"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceBody2"
        android:text="SEE ALL"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/cardviewad4"
        android:id="@+id/see_all_products"
        android:textColor="@android:color/black"
        android:layout_gravity="end"
        android:layout_alignParentEnd="true"
        android:textSize="15sp"
        android:gravity="right"

        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/cardview1"
        android:layout_below="@+id/see_all_products"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_list1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">
        </androidx.recyclerview.widget.RecyclerView>
    </androidx.cardview.widget.CardView>


        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>

