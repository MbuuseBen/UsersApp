    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.UsersApp.AppBarOverlay"
        android:id="@+id/r5">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/top_app_bar"
            style="@style/Widget.AppCompat.Light.ActionBar"
            />

    </com.google.android.material.appbar.AppBarLayout>





    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/r5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:isScrollContainer="true">

    <RelativeLayout
        android:id="@+id/picture_frame"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/profile" />


    </RelativeLayout>

            <TextView
                android:id="@+id/edit_settings_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/picture_frame"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="10dp"
                android:padding="7dp"
                android:text="Edit Profile"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/profile_details_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_settings_btn"
                android:layout_centerHorizontal="false"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:icon="@drawable/ic_search_icon"
                android:text="Profile Details "
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textSize="15dp" />



    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/profile_details_txt"
        android:id="@+id/product_final_image_card_view_details"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:cardElevation="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/info">

            <TextView
                android:id="@+id/first_name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:text="First Name"
                android:padding="10dp"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                 />


            <TextView
                android:id="@+id/settings_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first_name_txt"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/input_design3"
                android:drawableStart="@drawable/ic_baseline_person_icon"
                android:hint="First Name"
                android:padding="10dp"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/last_name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_first_name"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:padding="10dp"
                android:text="Last Name"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/settings_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/last_name_txt"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/input_design3"
                android:drawableStart="@drawable/ic_baseline_person_icon"
                android:hint="Last Name"
                android:padding="10dp"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phone_number_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_last_name"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:padding="10dp"
                android:text="Phone Number"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/settings_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone_number_txt"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/input_design3"
                android:drawableStart="@drawable/ic_baseline_contact_phone_icon"
                android:hint=" Phone Number"
                android:padding="10dp"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/email_address_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_phone_number"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:padding="10dp"
                android:text="Email Address"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/settings_email_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_address_txt"
                android:layout_marginStart="5dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/input_design3"
                android:drawableStart="@drawable/ic_baseline_email_icon1"
                android:hint="Email Address"
                android:padding="10dp"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:textStyle="bold" />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceBody2"
        android:text="ADDRESS DETAILS "
        android:id="@+id/address_details_card"
        android:textColor="@android:color/black"
        android:layout_marginBottom="0dp"
        android:layout_below="@+id/product_final_image_card_view_details"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:gravity="left"
        />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/details_card"
        android:layout_width="match_parent"
        android:layout_below="@+id/address_details_card"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:elevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="15dp"
                    android:drawableStart="@drawable/ic_baseline_location_on_24"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:id="@+id/settings_address"
                    android:text="You Currently Have No addresses , Please Edit your Profile to add an address."
                    android:layout_marginLeft="0dp"
                    android:gravity="left"
                    android:textColor="@android:color/black" />


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>