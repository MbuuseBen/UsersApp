<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/product_final_image_card_view_details"
    android:layout_marginTop="3dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cart_product_image"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="2dp"
                android:gravity="left"
                android:scaleType="fitCenter" />

            <TextView
                android:id='@+id/cart_product_name'
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Name  "
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@+id/cart_product_image"
                android:layout_toRightOf="@+id/cart_product_image"
                android:textColor="@color/black"
                android:textSize="15sp"
                />


            <TextView
                android:id='@+id/cart_product_price'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Price  "
                android:textStyle="bold"
                android:layout_toEndOf="@+id/cart_product_image"
                android:layout_toRightOf="@+id/cart_product_image"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_below="@+id/cart_product_name"


                />



            <TextView
                android:id='@+id/cart_product_quantity'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Quantity  "
                android:layout_toEndOf="@+id/cart_product_image"
                android:layout_toRightOf="@+id/cart_product_image"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_below="@+id/cart_product_price"
                />

            <TextView
                android:id='@+id/cart_product_subtotal'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cart_product_quantity"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/cart_product_image"
                android:layout_toRightOf="@+id/cart_product_image"
                android:text="Sub Total "
                android:textColor="@color/black"
                android:textSize="12dp" />

            <TextView
                android:id='@+id/cart_seller_detail'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cart_product_subtotal"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/cart_product_image"
                android:layout_toRightOf="@+id/cart_product_image"
                android:text="Seller "
                android:textColor="@color/black"
                android:textSize="12dp" />

            <TextView
                android:id='@+id/seller_name'
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cart_product_subtotal"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/cart_product_image"
                android:layout_toRightOf="@+id/cart_product_image"
                android:text="Seller "
                android:textColor="@color/black"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/deleteBtn1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/cart_product_subtotal"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="right"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_delete_24" />


        </RelativeLayout>


</androidx.cardview.widget.CardView>
